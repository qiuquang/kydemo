/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-size: "-apple-system,BlinkMacSystemFont,"Helvetica Neue","PingFang SC","Hiragino Sans GB","Microsoft YaHei UI","Microsoft YaHei",Arial,sans-serif";
}

/* 文章里面的插图样式 */
.detail_page{
  margin: 0 50rpx;
}
.detail_title{
  font-size: 40rpx;
  font-weight: 400;
  color: #333;
}
.detail_img{
  text-align: center;
  border-radius: 5px;
  margin: 0 auto;
}
.detail_second_title{
  color: rgb(46 70 89);
  font-weight: bold;
  letter-spacing: 6rpx;
  text-align: center;
}
.article_part{
  letter-spacing: 6rpx;
  margin-top: 20rpx;
}